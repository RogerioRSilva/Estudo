package fundamentos;

public class AreaCircunferencia {
	public static void main(String[] args) {
		System.out.println("USANDO VARIAVEIS E CONSTANTES");
		System.out.println(3 + 1);
		System.out.println("=============================================================");
		System.out.println(" ");
		
		// DECLARAÇÃO DA VARIAVEL
		int raio = 3;
		double num = 3.5;
		final int NUM_CONST = 25;
		// Quando coloco a palavra "final" antes da declaração da variável
		// O valor não poderá ser mais alterado. 
		
		System.out.println("Exibindo a soma " + num + " + " + raio + " : " + num + raio);
		
	}
}
